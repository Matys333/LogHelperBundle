<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="log.helper.message_handler" class="Matys333\LogHelperBundle\MessageHandler\LogMessageHandler">
            <!-- Will be filled in with dynamically -->
            <argument id="log.helper.logs_path"/>
            <argument id="log.helper.logs_backup_path"/>
            <argument id="log.helper.self_log_file_name"/>
            <argument id="log.helper.logs"/>
        </service>
    </services>
</container>